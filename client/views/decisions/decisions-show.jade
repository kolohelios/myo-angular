h1#dashboardTitle Result Details
.row
  .col-xs-4
    h3 Decision Title
    h3 {{user.title}}
  .col-xs-4
    h3 Decision Date Taken
    h3 {{user.date | date:'yyy-MM-dd'}}
  .col-xs-4
    h3 Decision Results
    h3 {{user.result}}
.row
  .col-xs-8.col-xs-offset-2
      table.table-striped.table-hover
        thead
          tr
            th Number
            th Choice A
            th Choice B
            th User's Choice
          tr(ng-repeat='choice in choices track by $index')
            td {{$index + 1}}
            td {{choice.a}}
            td {{choice.b}}
            td {{choice.user}}
          tr
            td 0
            td hamburger
            td salad
            td hamburger
